@model SportsPro.Models.Product

@{
    ViewData["Title"] = "Add/Edit Product";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddEditProduct" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Code" class="form-label">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="YearlyPrice" class="form-label">Yearly Price</label>
        <input asp-for="YearlyPrice" class="form-control" />
        <span asp-validation-for="YearlyPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="ManageProducts" class="btn btn-primary">Cancel</a>
</form>
